@model Retailr3.Models.SubBrand.AddSubBrandViewModel

@{
    ViewData["Title"] = $"New Sub Brand for {ViewBag.BrandName}";
}
    <div class="row">
        <div class="col-lg-12 col-md-12">
            <div class="card">
                <div class="card-header">

                </div>
                <div class="card-content">
                    <form id="loanAppllicationForm" asp-action="CreateSubBrand" method="POST">
                        @Html.ValidationSummary(true)
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <input type="hidden" asp-for="BrandId" />
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Name" class="control-label"></label><span style="color: red"> *</span>
                                    <input id="name" required asp-for="Name" class="form-control" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Description" class="control-label"></label>
                                    <input id="description" asp-for="Description" class="form-control" />
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <button id="submit_btn" type="submit" class="btn btn-info btn-fill btn-wd pull-right">Submit</button>
                            </div>
                            <div class="col-md-6">
                                @Html.ActionLink("Back to Sub Brands", "SubBrands", new { id = Model.BrandId }, new { title = "Sub Brand", @class = "btn btn-md btn-fill btn-wd btn-warning" })
                            </div>
                        </div>
                        <div class="clearfix"></div>
                    </form>
                </div>
            </div>

        </div>
    </div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
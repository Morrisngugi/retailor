@model Retailr3.Models.CountryModels.CountryDetailsViewModel

@{
    ViewData["Title"] = "Delete Country";
}

    <div class="row">
        <div class="col-lg-12 col-md-12">
            <div class="card">
                <div class="card-content">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>@Html.DisplayNameFor(model => model.CountryId)</label>
                                <label class="form-control border-input">@Html.DisplayFor(model => model.CountryId)</label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>@Html.DisplayNameFor(model => model.CountryCode)</label>
                                <label class="form-control border-input">@Html.DisplayFor(model => model.CountryCode)</label>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>@Html.DisplayNameFor(model => model.CountryName)</label>
                                <label class="form-control border-input">@Html.DisplayFor(model => model.CountryName)</label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>@Html.DisplayNameFor(model => model.CountryDescription)</label>
                                <textarea readonly asp-for="CountryDescription" class="form-control"></textarea>
                                @*<label class="form-control border-input">@Html.DisplayFor(model => model.RegionDescription)</label>*@
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>@Html.DisplayNameFor(model => model.DateCreated)</label>
                                <label class="form-control border-input">@Html.DisplayFor(model => model.DateCreated)</label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>@Html.DisplayNameFor(model => model.DateLastUpdated)</label>
                                <label class="form-control border-input">@Html.DisplayFor(model => model.DateLastUpdated)</label>
                            </div>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                </div>
            </div>
        </div>
        <div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3">
            <form id="CountryDeleteForm" asp-action="Delete">
                <input id="CountryDeleteForm" type="submit" value="Delete" class="btn btn-danger btn-sm" />
            </form>

        </div>
        <div class="col-lg-12 col-md-12">
            @Html.ActionLink("", "Index", new { }, new { title = "Back", @class = "i ti-arrow-left text-danger btn btn-info pull-left" })

        </div>
       
    </div>


@section scripts{
    <script>
        $("document").ready(function () {
            $('#CountryDeleteForm').on('click', function (e) {
                e.preventDefault(); // prevent form submit
                Swal.fire({
                    title: 'Are you sure?',
                    text: "You won't be able to revert this!",
                    type: 'warning',
                    showCancelButton: true,
                    confirmButtonText: 'Yes!',
                    confirmButton: 'confirm-button-class',
                    cancelButtonText: 'No!',
                    cancelButton: 'cancel-button-class',
                    reverseButtons: true
                }).then((result) => {
                    if (result.value) {
                        $('#CountryDeleteForm').submit();
                    } else if (result.dismiss === Swal.DismissReason.cancel) {
                        Swal.fire(
                            'Cancelled',
                            'Your resource is safe',
                            'info'
                        )
                    }
                })
            })
        });

    </script>
}

@model Retailr3.Models.RegionModels.EditRegionViewModel

@{
    ViewData["Title"] = "Edit Region";
}

<div class="row">
    <div class="col-lg-12 col-md-12">
        <div class="card">
            <div class="card-header">

            </div>
            <div class="card-content">
                <form id="editRegion" asp-action="EditRegion">
                    @Html.ValidationSummary(true)
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">
                        <div class="form-group">
                            <input type="hidden" asp-for="RegionId" class="form-control" />
                            <input type="hidden" asp-for="CountryId" class="form-control" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="CountryName" class="control-label"></label>
                                <input asp-for="CountryName" readonly class="form-control" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="RegionName" class="control-label"></label>
                                <input asp-for="RegionName" class="form-control" />
                                <span asp-validation-for="RegionName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="RegionDescription" class="control-label"></label>
                                <textarea asp-for="RegionDescription" class="form-control"></textarea>
                                <span asp-validation-for="RegionDescription" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                   

                    <div class="text-center submit-button">
                        <button id="submit_btn" type="submit" class="btn btn-info btn-fill btn-wd">Update</button>
                    </div>

                    <div class="clearfix"></div>
                </form>
            </div>
        </div>
        @Html.ActionLink("Back", "Regions", new { id = Model.CountryId }, new { title = "Regions", @class = "btn btn-md btn-info" })
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
@model IEnumerable<Retailr3.Models.RegionModels.ListRegionViewModel>

@{
    ViewData["Title"] = $"Regions for {ViewBag.Country.Name}";
}


<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-content">
                <div class="toolbar">
                    @*more buttons to go here*@
                    @*@if (User.Claims.First(claim => claim.Type == "role").Value.ToLower().Equals("merchant"))
                        {*@
                    <p>
                        <a class="btn btn-success btn-md ti-arrow-left" asp-action="Index"> Back</a>
                        @Html.ActionLink(" Add New", "CreateRegion", new { countryId = ViewBag.Country.Id, countryName = ViewBag.Country.Name }, new { title = "Add new Region for " + ViewBag.Country.Name, @class = "i ti-plus text-success btn btn-md btn-success" })
                    </p>
                    @*}*@

                </div>
                <div class="fresh-datatables">
                    <table id="regiondatatables" class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%" style="width:100%">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.CountryName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.RegionCode)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.RegionName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.RegionDescription)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.DateCreated)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.DateLastUpdated)
                                </th>
                                <th>
                                    Action
                                </th>
                            </tr>
                        </thead>

                        <tbody>
                            @if (Model.Count() > 0)
                            {

                                @foreach (var item in Model)
                                {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CountryName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.RegionCode)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.RegionName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.RegionDescription)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DateCreated)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DateLastUpdated)
                                </td>
                                <td>
                                    @Html.ActionLink("", "EditRegion", new { id = item.RegionId }, new { title = "Edit Region", @class = "i ti-pencil text-success" }) |
                                    @Html.ActionLink("", "RegionDetails", new { id = item.RegionId }, new { title = "Region Details", @class = "i ti-eye text-info" }) |
                                    @Html.ActionLink("", "DeleteRegion", new { id = item.RegionId }, new { title = "Delete Region", @class = "i ti-close text-danger" })
                                </td>
                            </tr>
                                }
                            }
                            else
                            {
                            }

                        </tbody>

                    </table>
                </div>

            </div>
        </div>
    </div>
</div>


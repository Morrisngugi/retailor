@model IEnumerable<Retailr3.Models.CountryModels.ListCountryViewModel>

@{
    ViewData["Title"] = "List of Countries";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-content">
                <div class="toolbar">
                    @*more buttons to go here*@
                    @*@if (User.Claims.First(claim => claim.Type == "role").Value.ToLower().Equals("merchant"))
                        {*@
                    <p>
                        <a class="btn btn-success btn-sm" asp-action="Create">Add Country</a>
                    </p>
                    @*}*@

                </div>
                <div class="fresh-datatables">
                    <table id="tiersdatatables" class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%" style="width:100%">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.CountryName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.CountryCode)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.CountryDescription)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.DateCreated)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.DateLastUpdated)
                                </th>
                                <th>
                                    Action
                                </th>
                            </tr>
                        </thead>

                        <tbody>
                            @if (Model.Count() > 0)
                            {

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.CountryName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.CountryCode)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.CountryDescription)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.DateCreated)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.DateLastUpdated)
                                        </td>
                                        <td class="">
                                            @Html.ActionLink("", "Regions", new { id = item.CountryId }, new { title = "Regions", @class = "i ti-layout-grid4" }) |
                                            @Html.ActionLink("", "Edit", new { id = item.CountryId }, new { title = "Edit", @class = "i ti-pencil text-success" }) |
                                            @Html.ActionLink("", "Details", new { id = item.CountryId }, new { title = "Details", @class = "i ti-eye text-info" }) |
                                            @Html.ActionLink("", "Delete", new { id = item.CountryId }, new { title = "Delete", @class = "i ti-close text-danger" })
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                            }

                        </tbody>

                    </table>
                </div>

            </div>
        </div>
    </div>
</div>




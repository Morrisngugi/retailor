@model Retailr3.Models.CountryModels.EditCountryViewModel

@{
    ViewData["Title"] = "Edit Country";
}

<div class="row">
    <div class="col-lg-12 col-md-12">
        <div class="card">
            <div class="card-header">

            </div>
            <div class="card-content">
                <form id="editRegion" asp-action="Edit">
                    @Html.ValidationSummary(true)
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">
                        <div class="form-group">
                            <input type="hidden" asp-for="CountryId" class="form-control" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Name" class="control-label"></label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Description" class="control-label"></label>
                                <textarea asp-for="Description" class="form-control"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="text-center submit-button">
                        <button id="submit_btn" type="submit" class="btn btn-info btn-fill btn-wd">Update</button>
                    </div>

                    <div class="clearfix"></div>
                </form>
            </div>
        </div>
        <a class="btn btn-info btn-sm" asp-action="Index">Back</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

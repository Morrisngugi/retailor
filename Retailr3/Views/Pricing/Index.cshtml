@model IEnumerable<Retailr3.Models.Pricing.ListPricingViewModel>

@{
    ViewData["Title"] = "List of Pricings";
}

 <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-content">
                        <div class="toolbar">
                            @*more buttons to go here*@
                            @*@if (User.Claims.First(claim => claim.Type == "role").Value.ToLower().Equals("merchant"))
                                {*@
                            <p>
                                <a class="btn btn-success btn-sm" asp-action="Create">Add Pricing</a>
                            </p>
                            @*}*@

                        </div>
                        <div class="fresh-datatables">
                            <table id="pricingdatatables" class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%" style="width:100%">
                                <thead>
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Price)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Product)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Tier)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Code)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.DateCreated)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.DateLastUpdated)
                                        </th>
                                        <th></th>
                                    </tr>
                                </thead>

                                <tbody>
                                    @if (Model.Count() > 0)
                                    {

                                        @foreach (var item in Model)
                                        {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Price)
                                        </td>
                                         <th>
                                            @Html.DisplayNameFor(model => model.Product)
                                        </th>
                                         <th>
                                            @Html.DisplayNameFor(model => model.Tier)
                                        </th>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Code)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.DateCreated)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.DateLastUpdated)
                                        </td>
                                        <td class="">
                                            @Html.ActionLink("", "Edit", new { id = item.Id }, new { title = "Edit", @class = "i ti-pencil text-success" }) |
                                            @Html.ActionLink("", "Details", new { id = item.Id }, new { title = "Details", @class = "i ti-eye text-info" }) |
                                            @Html.ActionLink("", "Delete", new { id = item.Id }, new { title = "Delete", @class = "i ti-close text-danger" })
                                        </td>
                                    </tr>
                                        }
                                    }
                                    else
                                    {
                                    }

                                </tbody>

                            </table>
                        </div>

                    </div>
                </div>
            </div>
        </div>

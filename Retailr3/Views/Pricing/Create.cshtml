@model Retailr3.Models.Pricing.AddPricingViewModel

@{
    ViewData["Title"] = "New Pricng Form";
    Layout = "_Layout";
}

<div class="row">
    <div class="col-lg-12 col-md-12">
        <div class="card">
            <div class="card-header">

            </div>
            <div class="card-content">
                <form id="loanAppllicationForm" asp-action="Create" method="POST">
                    @Html.ValidationSummary(true)
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="row">
                            <div class="col-md-6">
                                 <div class="form-group">
                                    <select id="TierId" required asp-for="TierId" class="form-control" asp-items="@(new SelectList(ViewBag.Entities, "Id", "Name"))"></select>
                                    <input asp-for="TierId" class="form-control" />
                                    <span asp-validation-for="TierId" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="ProuctId" class="control-label"></label>
                                   @* <select id="ProuctId" required asp-for="ProuctId" class="form-control" asp-items="@(new SelectList(ViewBag.Entities, "Id", "Name"))"></select> *@
                                    <span asp-validation-for="ProuctId" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Price" class="control-label"></label><span style="color: red"> *</span>
                                    <input id="price" required asp-for="Price" class="form-control" />
                                    <span asp-validation-for="Price" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="text-center submit-button">
                                    <button id="submit_btn" type="submit" class="btn btn-info btn-fill btn-wd">Submit</button>
                                </div>
                            </div>
                            <div class="col-md-6">
                            </div>
                        </div>
                        <div class="clearfix"></div>
                </form>
            </div>
        </div>
        <a class="btn btn-info btn-sm" asp-action="Index">Back to Pricing</a>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@model Retailr3.Models.Vat.AddVatViewModel

@{
    ViewData["Title"] = $"New Vat for {ViewBag.vatCategoryName}";

}

<div class="row">
    <div class="col-lg-12 col-md-12">
        <div class="card">
            <div class="card-header">

            </div>
            <div class="card-content">
                <form id="loanAppllicationForm" asp-action="CreateVat" method="POST">
                    @Html.ValidationSummary(true)
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <input type="hidden" asp-for="VatCategoryId" />
                    </div>
                    <div class="row">
                        <div class="col-md-6 col-xs-12">
                            <label>Effective Date:</label>
                            <input type="date" asp-for="EffectiveDate" class="form-control" required>
                            <span asp-validation-for="EffectiveDate" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 col-xs-12">
                            <label>End Date:</label>
                            <input type="date" asp-for="EndDate" class="form-control" required>
                            <span asp-validation-for="EndDate" class="text-danger"></span>
                        </div>
                    </div> <br />
                    <div class="row">
                        <div class="col-md-6 col-xs-12">
                            <label asp-for="Rate" class="control-label"></label>
                            <input asp-for="Rate" class="form-control" />
                            <span asp-validation-for="Rate" class="text-danger"></span>
                        </div>
                    </div>  <br />
                    <div class="row">
                        <div class="col-md-6">
                            <button id="submit_btn" type="submit" class="btn btn-info btn-fill btn-wd pull-right">Submit</button>
                        </div>
                        <div class="col-md-6">
                            @Html.ActionLink("Back to Vats", "Vats", new { id = Model.VatCategoryId }, new { title = "Sub Brand", @class = "btn btn-md btn-fill btn-wd btn-warning" })
                        </div>
                    </div>
                    <div class="clearfix"></div>
                </form>
            </div>
        </div>

    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@model IEnumerable<Retailr3.Models.UnitOfMeasure.ListUnitOfMeasureViewModel>

@{
    ViewData["Title"] = $"Unit Of Measures for {ViewBag.UomType.Name}";
}


    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-content">
                    <div class="toolbar">
                        @*more buttons to go here*@
                        @*@if (User.Claims.First(claim => claim.Type == "role").Value.ToLower().Equals("merchant"))
                        {*@
                        <p>
                            <a class="btn btn-success btn-md ti-arrow-left" asp-action="Index"> Back</a>
                            @Html.ActionLink(" Add New", "CreateUOM", new { uomTypeId = ViewBag.UomType.Id, UomTypeName = ViewBag.UomType.Name }, new { title = "Add Unit Of Measure for " +ViewBag.UomType.Name , @class = "i ti-plus text-success btn btn-md btn-success" })
                        </p>
                        @*}*@

                    </div>
                    <div class="fresh-datatables">
                        <table id="UOMsdatatables" class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%" style="width:100%">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.UOMTypeName)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Name)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Code)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Description)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Grammage)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.PackSize)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.PalletSize)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.DateCreated)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.DateLastUpdated)
                                    </th>
                                    <th>
                                        Action
                                    </th>
                                </tr>
                            </thead>

                            <tbody>
                                @if (Model.Count() > 0)
                                {

                                    @foreach (var item in Model)
                                    {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.UOMTypeName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Code)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Description)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Grammage)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PackSize)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PalletSize)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DateCreated)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DateLastUpdated)
                                    </td>
                                    <td>
                                        @Html.ActionLink("", "EditUOM", new { id = item.Id }, new { title = "Edit UOM", @class = "i ti-pencil text-success" }) |
                                        @Html.ActionLink("", "UOMDetails", new { id = item.Id }, new { title = "UOM Details", @class = "i ti-eye text-info" }) |
                                        @Html.ActionLink("", "DeleteUOM", new { id = item.Id }, new { title = "Delete UOM", @class = "i ti-close text-danger" })
                                    </td>
                                </tr>
                                    }
                                }
                                else
                                {
                                }

                            </tbody>

                        </table>
                    </div>

                </div>
            </div>
        </div>
    </div>


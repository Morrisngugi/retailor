@model Retailr3.Models.UnitOfMeasure.UOMDetailsViewModel

@{
    ViewData["Title"] = "UOM Details";
}

<div class="row">
    <div class="col-lg-12 col-md-12">
        <div class="card">
            <div class="card-header">
                @*<h4 class="card-title">Edit Profile</h4>*@
            </div>
            <div class="card-content">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>@Html.DisplayNameFor(model => model.UOMTypeName)</label>
                            <label class="form-control border-input">@Html.DisplayFor(model => model.UOMTypeName)</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>@Html.DisplayNameFor(model => model.Code)</label>
                            <label class="form-control border-input">@Html.DisplayFor(model => model.Code)</label>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>@Html.DisplayNameFor(model => model.Name)</label>
                            <label class="form-control border-input">@Html.DisplayFor(model => model.Name)</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>@Html.DisplayNameFor(model => model.Description)</label>
                            <textarea readonly asp-for="Description" class="form-control"></textarea>
                            @*<label class="form-control border-input">@Html.DisplayFor(model => model.RegionDescription)</label>*@
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>@Html.DisplayNameFor(model => model.DateCreated)</label>
                            <label class="form-control border-input">@Html.DisplayFor(model => model.DateCreated)</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>@Html.DisplayNameFor(model => model.DateLastUpdated)</label>
                            <label class="form-control border-input">@Html.DisplayFor(model => model.DateLastUpdated)</label>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>@Html.DisplayNameFor(model => model.Grammage)</label>
                            <label class="form-control border-input">@Html.DisplayFor(model => model.Grammage)</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>@Html.DisplayNameFor(model => model.PackSize)</label>
                            <label class="form-control border-input">@Html.DisplayFor(model => model.PackSize)</label>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>@Html.DisplayNameFor(model => model.PalletSize)</label>
                            <label class="form-control border-input">@Html.DisplayFor(model => model.PalletSize)</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                        </div>
                    </div>
                </div>
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
    <div class="col-lg-12 col-md-12">
        @Html.ActionLink("Back", "UnitOfMeasures", new { id = Model.UOMTypeId }, new { title = "Unit Of Measure", @class = "btn btn-md btn-info" }) |  @Html.ActionLink("Edit UOM", "EditUOM", new { id = Model.Id }, new { title = "Edit UOM", @class = "btn btn-info btn-sm" })


    </div>
</div>


@model Retailr3.Models.UnitOfMeasure.EditUOMViewModel

@{
    ViewData["Title"] = "Edit UOM";
}

<div class="row">
    <div class="col-lg-12 col-md-12">
        <div class="card">
            <div class="card-header">

            </div>
            <div class="card-content">
                <form id="editRegion" asp-action="EditUOM">
                    @Html.ValidationSummary(true)
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">
                        <div class="form-group">
                            <input type="hidden" asp-for="Id" class="form-control" />
                            <input type="hidden" asp-for="UOMTypeId" class="form-control" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="UOMTypeName" class="control-label"></label>
                                <input asp-for="UOMTypeName" readonly class="form-control" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Name" class="control-label"></label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Description" class="control-label"></label>
                                <textarea asp-for="Description" class="form-control"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Grammage" class="control-label"></label>
                                <input asp-for="Grammage" required class="form-control" />
                                <span asp-validation-for="Grammage" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="PackSize" class="control-label"></label>
                                <input asp-for="PackSize" required class="form-control">
                                <span asp-validation-for="PackSize" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="PalletSize" class="control-label"></label>
                                <input asp-for="PalletSize" required class="form-control" />
                                <span asp-validation-for="PalletSize" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                            </div>
                        </div>
                    </div>

                    <div class="text-center submit-button">
                        <button id="submit_btn" type="submit" class="btn btn-info btn-fill btn-wd">Update</button>
                    </div>

                    <div class="clearfix"></div>
                </form>
            </div>
        </div>
        @Html.ActionLink("Back", "UnitOfMeasures", new { id = Model.UOMTypeId }, new { title = "Unit Of Measure", @class = "btn btn-md btn-info" })
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
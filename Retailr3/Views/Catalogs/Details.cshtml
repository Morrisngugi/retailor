@model Retailr3.Models.CatalogViewModels.CatalogDetailsViewModel

@{
    ViewData["Title"] = "Catalog Details";
}

<div class="row">
    <div class="col-lg-12 col-md-12">
        <div class="card">
            <div class="card-header">
                @*<h4 class="card-title">Edit Profile</h4>*@
            </div>
            <div class="card-content">

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>@Html.DisplayNameFor(model => model.Name)</label>
                            <label class="form-control border-input">@Html.DisplayFor(model => model.Name)</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>@Html.DisplayNameFor(model => model.Description)</label>
                            <textarea readonly asp-for="Description" class="form-control"></textarea>
                            @*<label class="form-control border-input">@Html.DisplayFor(model => model.RegionDescription)</label>*@
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>@Html.DisplayNameFor(model => model.EffectiveDate)</label>
                            <label class="form-control border-input">@Html.DisplayFor(model => model.EffectiveDate)</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>@Html.DisplayNameFor(model => model.EndDate)</label>
                            <label readonly asp-for="EndDate" class="form-control"></label>
                            @*<label class="form-control border-input">@Html.DisplayFor(model => model.RegionDescription)</label>*@
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>@Html.DisplayNameFor(model => model.Published)</label>
                            <label class="form-control border-input">@Html.DisplayFor(model => model.Published)</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>@Html.DisplayNameFor(model => model.DateCreated)</label>
                            <label class="form-control border-input">@Html.DisplayFor(model => model.DateCreated)</label>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>@Html.DisplayNameFor(model => model.DateLastUpdated)</label>
                            <label class="form-control border-input">@Html.DisplayFor(model => model.DateLastUpdated)</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>@Html.DisplayNameFor(model => model.Code)</label>
                            <label class="form-control border-input">@Html.DisplayFor(model => model.Code)</label>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>@Html.DisplayNameFor(model => model.Entity)</label>
                            <label class="form-control border-input">@Html.DisplayFor(model => model.Entity)</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        
                    </div>
                </div>

                <div class="clearfix"></div>
            </div>
        </div>
    </div>
    <div class="col-lg-12 col-md-12">
        @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { title = "Edit", @class = "btn btn-info btn-sm" }) |
        <a class="btn btn-success btn-sm" asp-action="Index">Back</a>
    </div>
</div>


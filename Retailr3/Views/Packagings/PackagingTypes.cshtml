@model IEnumerable<Retailr3.Models.PackagingType.ListPackagingTypeViewModel>

@{
    ViewData["Title"] = $"Packaging Types for {ViewBag.Packaging.Name}";
}

    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-content">
                    <div class="toolbar">
                        @*more buttons to go here*@
                        @*@if (User.Claims.First(claim => claim.Type == "role").Value.ToLower().Equals("merchant"))
                        {*@
                        <p>
                            <a class="btn btn-success btn-sm" asp-action="Index">Back</a>
                            @Html.ActionLink("Add Packaging Type", "CreatePackagingType", new { PackagingId = ViewBag.Packaging.Id, PackagingName = ViewBag.Packaging.Name }, new { title = "Add Packaging Type", @class = "text-success btn btn-md btn-success" })
                        </p>
                        @*}*@

                    </div>
                    <div class="fresh-datatables">
                        <table id="sCategoriesdatatables" class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%" style="width:100%">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.PackagingName)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Name)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.DateCreated)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.DateLastUpdated)
                                    </th>
                                    <th>
                                        Action
                                    </th>
                                </tr>
                            </thead>

                            <tbody>
                                @if (Model.Count() > 0)
                                {

                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.PackagingName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Name)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.DateCreated)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.DateLastUpdated)
                                            </td>
                                            <td>
                                                @Html.ActionLink("", "EditPackagingType", new { id = item.Id }, new { title = "Edit Packaging Type", @class = "i ti-pencil text-success" }) |
                                                @Html.ActionLink("", "PackagingTypeDetails", new { id = item.Id }, new { title = "Packaging Type Details", @class = "i ti-eye text-info" }) |
                                                @Html.ActionLink("", "DeletePackagingType", new { id = item.Id }, new { title = "Delete Packaging Type", @class = "i ti-close text-danger" })
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                }

                            </tbody>

                        </table>
                    </div>

                </div>
            </div>
        </div>
    </div>
